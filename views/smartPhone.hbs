<div class="">
    <div class="container-fluid">
        <div class="col-lg-11 p-3 main-section bg-white">
            <div class="row hedding m-0 pl-3 pt-0 pb-3">
                <a href="/smart" class="btn btn-primary previous" style="margin:0 10px; 0 0"> &laquo; Back </a>
                Product Detail
            </div>
            <div class="row m-0">
                <div class="col-lg-4 left-side-product-box pb-3">
                    <img src="/{{smartPhone.img}}" title="{{smartPhone.title}}" class="border p-3">
                </div>
                <div class="col-lg-8 m-auto d-grid">
                    <div class="right-side-pro-detail border p-3 m-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <span>Who What Wear</span>
                                <p class="m-0 p-0">{{smartPhone.title}}</p>
                            </div>
                            <div class="col-lg-12">
                                <p class="m-0 price price-pro">{{smartPhone.price}}</p>
                                <hr class="p-0 m-0">
                            </div>
                            <div class="col-lg-12 pt-2">
                                <h5>Product Detail</h5>
                                <span>{{smartPhone.descr}}</span>
                                <hr class="m-0 pt-2 mt-2">
                            </div>

                            <div class="form-inline">
                                <div class="form-group d-flex col-12">
                                    <label for="inputPassword6">Quantity :</label>
                                    <input type="number" id="inputPassword6" class="form-control mx-sm-3"
                                        aria-describedby="passwordHelpInline" required>
                                </div>
                            </div>
                            <div class="col-lg-12 mt-3">
                                <div class="row">
                                    <form action="/card/add" method="POST" class="col-lg-6 pb-2">
                                        <input type="hidden" name="id" value="{{smartPhone.id}}" />
                                        <button type="submit" class="btn btn-danger w-100">Add To Cart</button>
                                    </form>
                                    <div class="col-lg-6">
                                        <a href="#" class="btn btn-success w-100">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{#if SmartPhones.length}}
            <div class="row">
                <div class="col-lg-12 text-center pt-3">
                    <h4>More Product</h4>
                </div>
            </div>
            <div class="row mt-3 p-0 text-center pro-box-section container physicianList">
                <div id="pagingBox" class="content_smartPhone py-4">
                    {{#each SmartPhones}}
                    <div class="col hp">
                        <div class="card h-100 shadow-sm">
                            <img src="/{{img}}" class="card-img-top" alt="{{title}}" title="{{title}}" />
                            <div class="label-top shadow-sm">
                                <a class="text-white" href="#">{{title}}</a>
                            </div>
                            <div class="card-body">
                                <div class="clearfix mb-3">
                                    <span class="float-start badge rounded-pill bgs-success price">{{price}}</span>

                                    <span class="float-end" style="float: right;"><a href="/smart/{{id}}"
                                            target="_blank" class="small text-muted text-uppercase aff-link">Details</a>
                                    </span>
                                </div>
                                <h5 class="card-title">
                                    <a href="/smart/{{id}}" target="_blank">{{descr}}</a>
                                </h5>
                                <form action="/card/add" method="POST" class="d-grid gap-2 my-4">
                                    <input type="hidden" name="id" value="{{id}}" />
                                    <button type="submit" class="btn bgs-success bold-btn">add to cart</button>
                                </form>
                                <div class="clearfix mb-1 py-3">
                                    {{#if @root.isAuth}}
                                    <span class="float-end" style="float: right;">
                                        {{#ifeq userId._id @root.userId}}
                                        <a href="/smart/{{id}}/edit?allow=true"
                                            class="small text-muted text-uppercase aff-link">
                                            Edit
                                        </a>
                                        {{/ifeq}}
                                    </span>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
                <div style="display: flex;justify-content: end; padding: 5rem 0" id='page_navigation'></div>
            </div>
        </div>